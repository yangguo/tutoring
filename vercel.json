{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "include": [
        "api/index.ts",
        "api/app.ts",
        "api/router.ts",
        "api/chat/lesson.ts",
        "api/chat/speaking-practice.ts",
        "api/config/supabase.ts",
        "api/utils/jwt.ts",
        "api/utils/health.ts"
      ]
    }
  }
}
